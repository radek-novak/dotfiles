#[[ -s /Users/anon/.rvm/scripts/rvm ]] && source /Users/anon/.rvm/scripts/rvm
export PATH=/usr/local/bin:/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin:/usr/local/bin:/Users/anon/bin
[[ -s "$HOME/.rvm/scripts/rvm" ]] && source "$HOME/.rvm/scripts/rvm"

